                                                                                        <%= address[i].appartmentNumber
                                                                                            %>,
                                                                                            <%=address[i].city %><br>
                                                                                                <%= address[i].state%>,
                                                                                                    <%=address[i].country
                                                                                                        %>
                                                                                                        <br>
                                                                                                        <%=
                                                                                                            address[i].zipcode%>
                                                                                                            <br>
                                                                                                            <%=
                                                                                                                address[i].email%>
                                                                                                                <br>
                                                                                                                <%=address[i].phone%>
