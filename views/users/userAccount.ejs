        <!-- JavaScript Validation -->
        <script>
            function validateForm() {
                var form = document.getElementById('editform');
                var name = document.getElementById('name');
                var email = document.getElementById('email');
                var phone = document.getElementById('phone');
                var nameError = document.getElementById('nameError');
                var emailError = document.getElementById('emailError');
                var phoneError = document.getElementById('phoneError');

                // Regular expressions for validation
                var nameRegex = /^[A-Za-z\s]{4,}$/;
                var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                var phoneRegex = /^\d{10}$/;

                // Validate Name
                if (!nameRegex.test(name.value)) {
                    nameError.textContent = 'Name should contain at least 4 letters and no digits.';
                    return false;
                } else {
                    nameError.textContent = ''; // Clear the error message
                }

                // Validate Email
                if (!emailRegex.test(email.value)) {
                    emailError.textContent = 'Invalid email format.';
                    return false;
                } else {
                    emailError.textContent = ''; // Clear the error message
                }

                // Validate Phone
                if (!phoneRegex.test(phone.value)) {
                    phoneError.textContent = 'Phone should contain 10 digits.';
                    return false;
                } else {
                    phoneError.textContent = ''; // Clear the error message
                }

                return true;
            }
        </script>


