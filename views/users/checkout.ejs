        <script>
            function selectAddress(card) {
                const radioBtn = card.querySelector('input[type="radio"]');
                const allCards = document.querySelectorAll('.card-dashboard');
                const addAddressForm = document.getElementById('addAddressForm');

                // Hide the addAddressForm
                addAddressForm.style.display = 'none';

                // Uncheck all radio buttons and remove 'selected' class
                allCards.forEach((c) => {
                    const otherRadioBtn = c.querySelector('input[type="radio"]');
                    otherRadioBtn.checked = false;
                    c.classList.remove('selected');
