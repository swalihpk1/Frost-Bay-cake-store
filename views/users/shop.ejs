		<!-- ------------ filtering------------- -->
		<script>
			$(document).ready(function () {
				var currentPage;
				var selectedCategory;
				var selectedKilogram;
				var selectedSort = 'popularity';


				// --------searchTerm-----
				$('#searchInput').on('keyup', function () {
					setTimeout(sendRequests, 300);
				});

				// ------categoryFiltering------
				$('.category-filter').on('change', function () {
					selectedCategory = updateProductList();
					sendRequests();
				});

                // ---------sorting-----
				$('#sortby').on('change', function () {
					selectedSort = $(this).val();
					sendRequests();
				});

				// -------kilogram-filtering-----
				 $('.Kilogram-filter').on('change', function () {
					selectedKilogram = $(this).val()
					sendRequests(); 
				});

                //   ---pagination----
				$(document).on('click', '.pagination a.page-link', function (e) {
					e.preventDefault();
					currentPage = $(this).data('page');
					selectedCategory = updateProductList();
					sendRequests();

					$('html, body').animate({ scrollTop: 0 }, 'slow');
				});
                
				function updateProductList() {
					const selectedCategories = $('.category-filter:checked').map(function () {
						return $(this).val();
					}).get();
					return selectedCategories;
				}

				// -------Request Sending ajax for all--------
				function sendRequests() {
					var searchTerm = $('#searchInput').val();
					var data = {
						category: selectedCategory,
						sort: selectedSort,
						page: currentPage,
						kilogram:selectedKilogram,
						q: searchTerm
					};
					$.ajax({
						url: '/shop',
						method: 'GET',
						data: data,
						dataType: 'json',
						success: function (data) {
							const products = data.products;

							const productsContainer = $('.products');
							productsContainer.empty();
							const rowContainer = $('<div class="row justify-content-center"></div>');
							products.forEach(product => {
								const productElement = $(

									`<div class="col-6">
			<div class="product product-7 text-center" data-product-id="${product._id}">
				<figure class="product-media">
					<span class="product-label label-new">New</span>
					<a href="/shop/productDetails/${product._id}">
						<img src="/assets/productImages/uploadImages/${product.productImages[0]}" alt="Product image"
							class="product-image">
					</a>
		
					<div class="product-action-vertical">
						<a href="#" class="btn-product-icon btn-wishlist btn-expandable">
							<span>add to wishlist</span>
						</a>
						<a href="popup/quickView.html" class="btn-product-icon btn-quickview" title="Quick view">
							<span>Quick view</span>
						</a>
						<a href="#" class="btn-product-icon btn-compare" title="Compare">
							<span>Compare</span>
						</a>
					</div><!-- End .product-action-vertical -->
		
					<div class="product-action">
						<a href="#" class="btn-product btn-cart"><span>add to cart</span></a>
					</div><!-- End .product-action -->
				</figure><!-- End .product-media -->
		
				<div class="product-body">
					<div class="product-cat">
						<a href="#">
							${product.category.categoryName}
						</a>
					</div><!-- End .product-cat -->
					<h3 class="product-title">
						<a href="product.html">${product.productName}</a>
					</h3><!-- End .product-title -->
					<div class="product-price">
						$ ${product.price}
					</div><!-- End .product-price -->
				</div><!-- End .product-body -->
			</div><!-- End .product -->
		</div><!-- End .col-6 -->`
								);
								rowContainer.append(productElement);
							});

